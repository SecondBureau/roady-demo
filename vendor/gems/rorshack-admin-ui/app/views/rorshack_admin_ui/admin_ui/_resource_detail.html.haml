=render_collection_table([resource])do|columns|
  %table.model_detail
    %tbody
      - columns.each do|column|
        %tr
          %td.detail_title= column.to_s.titleize
          %td= render_content(resource , column )
      %tr
        %td.operations
          = link_to image_tag("icons/edit.png", :title => "Edit"), iadmin.edit_admin_ui_path(resource , :model_name => params[:model_name])
          &nbsp;&nbsp;
          = link_to image_tag("icons/delete.png", :title => "Delete"), iadmin.admin_ui_path(resource , :model_name => params[:model_name]), :confirm => 'Are you sure?', :method => :delete
